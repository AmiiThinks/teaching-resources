\newcommand{\qlist}[2]{%
% #1 is the list question
% #2 is the number of lines to give as prompts
	\begin{minipage}{\linewidth}
	List #2 #1:
	\begin{writelist}
	\foreach \index in {1, ..., #2} {
		\item ~
	}
	\end{writelist}
	\vspace*{.5\baselineskip} % make sure there's breathing room after the box
	\end{minipage}
}%

\newcommand\prompt[2]{%
% #1 is the prompt
% #2 is the number of lines to give as prompts
	\begin{minipage}{\linewidth}
	#1:
	\begin{writelist}
	\foreach \index in {1, ..., #2} {
		\item ~
	}
	\end{writelist}
	\vspace*{.5\baselineskip} % make sure there's breathing room after the box
	\end{minipage}
} %

